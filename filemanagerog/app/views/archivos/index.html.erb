<%= link_to 'Nuevo archivo', new_archivo_path %>

<h2>Lista de archivos</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Type</th>
    <th>Date</th>
  </tr>
 
  <% @archivos.each do |archivo| %>
    <tr>
      <td><%= archivo.title %></td>
      <td><%= archivo.filetype %></td>
      <td><%= archivo.datefile %></td>
      <td><%= link_to 'Detalles', archivo_path(archivo) %></td>
      <td><%= link_to 'Editar', edit_archivo_path(archivo) %></td>
      <td><%= link_to 'Destroy', archivo_path(archivo),
              method: :delete,
              data: { confirm: 'Â¿Deseas eliminar el arhivo?' } %></td>
    </tr>
  <% end %>
</table>